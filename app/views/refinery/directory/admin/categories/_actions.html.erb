<ul>
  <% if ::Refinery::Directory::Admin::CategoriesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.directory_admin_categories_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_directory_admin_category_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Directory::Admin::CategoriesController.sortable? && ::Refinery::Directory::Category.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Categories"),
                 refinery.directory_admin_categories_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Categories"),
                 refinery.directory_admin_categories_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
